@model Microsoft.AspNetCore.Identity.IdentityUser

<h2>Редактировать профиль</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="UserName">Имя пользователя</label>
        <input type="text" id="UserName" name="UserName" class="form-control" asp-for="UserName" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Email">Электронная почта</label>
        <input type="email" id="Email" name="Email" class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Bio">Номер телефона</label>
        <input type="number" id="PhoneNumber" name="PhoneNumber" class="form-control" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
    <a href="@Url.Action("Index", "Profile")" class="btn btn-secondary">Отмена</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}