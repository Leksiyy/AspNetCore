@model Articles

@{
    ViewData["Title"] = "Создать пост";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        <label for="Title">Заголовок</label>
        <input type="text" id="Title" name="Title" class="form-control" value="@Model.Title" required />
    </div>

    <div class="form-group">
        <label for="Content">Содержание</label>
        <textarea id="Content" name="Content" class="form-control" rows="5" required>@Model.Content</textarea>
    </div>
    
    <input type="hidden" asp-for="Author" value="@User.Identity?.Name">

    <input type="hidden" asp-for="PublishDate" value="@DateTime.Now">
    
    <button type="submit" class="btn btn-primary">Создать</button>
</form>

<a href="@Url.Action("Index", "Articles")">Назад к списку постов</a>