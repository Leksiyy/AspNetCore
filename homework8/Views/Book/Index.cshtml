@using Microsoft.AspNetCore.Mvc.TagHelpers
@model homework8.ViewModel.BooksViewModel

@{
ViewData["Title"] = "Список книг";
}

<h1>Список книг</h1>

@if (Model.Books.Any())
{
<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Название</th>
        <th>Автор</th>
        <th>Год</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var book in Model.Books)
    {
    <tr>
        <td>@book.Title</td>
        <td>@book.Author</td>
        <td>@book.Year</td>
        <td>@book.Genre</td>
    </tr>
    }
    </tbody>
</table>
}
else
{
<p>Нет доступных книг. Добавьте новую книгу!</p>
}

<hr />

<h2>Добавить книгу</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label for="Title">Название</label>
        <input type="text" class="form-control" id="Title" name="NewBook.Title" required />
    </div>
    <div class="form-group">
        <label for="Author">Автор</label>
        <input type="text" class="form-control" id="Author" name="NewBook.Author" required />
    </div>
    <div class="form-group">
        <label for="Year">Год</label>
        <input type="number" class="form-control" id="Year" name="NewBook.Year" required />
    </div>
    <div class="form-group">
        <label for="Genre">Жанр</label>
        <input type="text" class="form-control" id="Genre" name="NewBook.Genre" required />
    </div>
    <button type="submit" class="btn btn-success">Добавить</button>
</form>